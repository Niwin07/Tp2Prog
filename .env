# Configuración de la API
# Copia este archivo como .env y ajusta la URL según la API que te proporcionen

# URL base de la API de tareas
REACT_APP_API_URL=https://jsonplaceholder.typicode.com

# Ejemplos de otras APIs que podrías usar:
# REACT_APP_API_URL=https://api.ejemplo.com/v1
# REACT_APP_API_URL=http://localhost:3001/api
# REACT_APP_API_URL=https://mi-api-tareas.herokuapp.com/api

# Timeout para las peticiones (en milisegundos)
REACT_APP_API_TIMEOUT=10000

# Otras configuraciones opcionales
REACT_APP_DEBUG=true